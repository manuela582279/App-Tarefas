@model List<App_Tarefas.Models.Tarefa>
@{
	ViewData["Title"] = "Tarefas";

}
<h1 class="display-4 fw-bold">Lista de tarefas</h1>
<a class="btn btn-primary btn-lg" asp-controller="Tarefas" asp-action="Create">Nova Tarefa</a>

<table class="table table-bordered table-striped mt-3">

	<thead>
		<tr>
			<th>ID</th>
			<th>Título</th>
			<th>Concluída</th>
			<th>Ações</th>

		</tr>
	</thead>

	<tbody>
		@foreach (var tarefa in Model)
		{
			<tr>
				<td>@tarefa.TarefaId</td>
				<td>@tarefa.Titulo</td>
				<td>@tarefa.Concluida</td>
				<td>
					<a aps-controller="Tarefas" asp-action="Details" asp-route-id="@tarefa.TarefaId" class="btn btn-info btn-sm me-2">Detalhes</a>

					<a aps-controller="Tarefas" asp-action="Edit" asp-route-id="@tarefa.TarefaId" class="btn btn-warning btn-sm me-2">Editar</a>

					<a aps-controller="Tarefas" asp-action="Delete" asp-route-id="@tarefa.TarefaId" class="btn btn-danger btn-sm me-2">Excluir</a>
				</td>

			</tr>
		}


	</tbody>

</table>